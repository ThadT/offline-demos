<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OfflineWithPackages.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:OfflineWithPackages"
    Title="Explore map packages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Packages"
            ContentTemplate="{DataTemplate local:PackageInfoPage}"
            Route="PackageInfoPage" />
        <ShellContent
            Title="Map view"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Scene view"
            ContentTemplate="{DataTemplate local:ScenePage}"
            Route="ScenePage" />
    </TabBar>

</Shell>
